
<%- include('partials/header.ejs')%> 
<%- include('partials/navbar.ejs')%> 

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="itemTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="itemTextField"
                        placeholder="Enter the Contact Name"
                        name="contactName" 
                        value="<%= item.contactName %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="QtyTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="QtyTextField"
                    placeholder="123-456-7890"
                    name="contactNumber" 
                    value="<%= item.contactNumber %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statusTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter an Email Address"
                    name="emailAddress" 
                    value="<%= item.emailAddress %>"
                    >
                </div>
                <br />
                <div style="text-align: center;">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> 
                        Submit
                    </button>
                    
                    <a href="/business/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> 
                        Cancel
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>

